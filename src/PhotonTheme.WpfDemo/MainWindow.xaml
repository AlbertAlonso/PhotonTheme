<Window
    x:Class="PhotonTheme.WpfDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpfDemo="clr-namespace:PhotonTheme.WpfDemo"
    Title="Photon Theme Demo App WPF"
    Width="800" Background="{StaticResource LightBrush}"
    Height="450" UseLayoutRounding="True"
    IsTabStop="False"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            TextAlignment="Center"
            Style="{StaticResource Heading2TextBlock}"
            Text="Photon Theme for WPF" />
        <TabControl Grid.Row="1" TabStripPlacement="Top"  >
            <TabItem Header="Buttons">
                <wpfDemo:Buttons/>
            </TabItem>
            <TabItem Header="Fields">
                <wpfDemo:Fields/>
            </TabItem>
            <TabItem Header="Colors">
                <wpfDemo:Colors/>
            </TabItem>
            <TabItem Header="Typography">
                <wpfDemo:Typography/>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
