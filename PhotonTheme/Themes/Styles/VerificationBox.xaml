<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:PhotonTheme.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Base/VerificationBoxBase.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- region PhotonVerificationBox -->

    <Style x:Key="PhotonVerificationBox" BasedOn="{StaticResource BaseVerificationBox}" TargetType="{x:Type controls:VerificationBox}"/>

    <!-- endregion-->

    <!-- region LostFocusVerificationBox -->

    <Style x:Key="LostFocusVerificationBox" BasedOn="{StaticResource BaseVerificationBox}" TargetType="{x:Type controls:VerificationBox}">
        <Setter Property="VerificationTrigger" Value="LostFocus"/>
    </Style>

    <!-- endregion -->

</ResourceDictionary>