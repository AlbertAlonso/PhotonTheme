<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <ApplicationIcon />
    <StartupObject />
    <PackageId>PhotonTheme</PackageId>
    <Version>0.0.1</Version>
    <Authors>Albert Alonso</Authors>
    <Product>Photon Theme</Product>
    <Description>A new clean and modern theme to use in your WPF applications. It also includes new controls missing from the default WPF toolkit.</Description>
    <Copyright>MIT License</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/AlbertAlonso/PhotonTheme</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AlbertAlonso/PhotonTheme</RepositoryUrl>
    <RepositoryType>WPF Theme</RepositoryType>
    <PackageTags>WPF, UI, Theme, XAML, Design, Photon</PackageTags>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Themes\Base\ButtonBase.xaml" />
    <None Remove="Themes\Base\CheckBoxBase.xaml" />
    <None Remove="Themes\Base\ScrollBarBase.xaml" />
    <None Remove="Themes\Base\TabControlBase.xaml" />
    <None Remove="Themes\Base\TextBlockBase.xaml" />
    <None Remove="Themes\Base\TextBoxBase.xaml" />
    <None Remove="Themes\Base\VerificationBoxBase.xaml" />
    <None Remove="Themes\Button.xaml" />
    <None Remove="Themes\Defaults.xaml" />
    <None Remove="Themes\General\Colors.xaml" />
    <None Remove="Themes\General\Fonts.xaml" />
    <None Remove="Themes\General\Shadows.xaml" />
    <None Remove="Themes\Generic.xaml" />
    <None Remove="Themes\PhotonTheme.Colors.xaml" />
    <None Remove="Themes\PhotonTheme.Font.xaml" />
    <None Remove="Themes\PhotonTheme.Shadows.xaml" />
    <None Remove="Themes\ScrollBar.xaml" />
    <None Remove="Themes\Styles\CheckBox.xaml" />
    <None Remove="Themes\Styles\VerificationBox.xaml" />
    <None Remove="Themes\TabControl.xaml" />
    <None Remove="Themes\TextBlock.xaml" />
    <None Remove="Themes\TextBox.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Utilities\Resources\Lato\Lato-Black.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-BlackItalic.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-Bold.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-BoldItalic.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-Hairline.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-HairlineItalic.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-Italic.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-Light.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-LightItalic.ttf" />
    <Resource Include="Utilities\Resources\Lato\Lato-Regular.ttf" />
    <Resource Include="Utilities\Resources\Lato\OFL.txt" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Themes\Generic.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Styles\Button.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\General\Colors.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Defaults.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\General\Fonts.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Styles\ScrollBar.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\General\Shadows.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Styles\TabControl.xaml">
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Styles\TextBlock.xaml">
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

</Project>