<Window
    x:Class="PhotonTheme.DemoWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:PhotonTheme.Wpf.Extensions;assembly=PhotonTheme.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:PhotonTheme.Wpf;assembly=PhotonTheme.Wpf"
    xmlns:demoWpf="clr-namespace:PhotonTheme.DemoWpf"
    Title="Photon Theme Demo App WPF"
    Width="800"
    Height="450" UseLayoutRounding="True"
    IsTabStop="False"
    mc:Ignorable="d">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            HorizontalAlignment="Center"
            Style="{StaticResource Heading1TextBlock}"
            Text="Photon Theme for WPF" />
        <TabControl Grid.Row="1">
            <TabItem Header="Colors">
                <demoWpf:Colors/>
            </TabItem>
            <TabItem Header="Typography">
                <demoWpf:Typography/>
            </TabItem>
            <TabItem Header="Buttons">
                <demoWpf:Buttons/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
