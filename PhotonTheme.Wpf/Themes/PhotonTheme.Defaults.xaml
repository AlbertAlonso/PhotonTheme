<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  This dictionary overrides the default themes  -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/PhotonTheme.Wpf;component/Themes/Generic.xaml" />
        <ResourceDictionary Source="pack://application:,,,/PhotonTheme.Wpf;component/Themes/PhotonTheme.TextBlock.xaml" />
        <ResourceDictionary Source="pack://application:,,,/PhotonTheme.Wpf;component/Themes/PhotonTheme.Button.xaml" />
        <ResourceDictionary Source="pack://application:,,,/PhotonTheme.Wpf;component/Themes/PhotonTheme.ScrollBar.xaml" />
        <ResourceDictionary Source="pack://application:,,,/PhotonTheme.Wpf;component/Themes/PhotonTheme.TabControl.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource MinimalScrollBar}" TargetType="{x:Type ScrollBar}" />
    <Style BasedOn="{StaticResource PrimaryTabControl}" TargetType="{x:Type TabControl}" />
    <Style BasedOn="{StaticResource RegularMediumTextBlock}" TargetType="{x:Type TextBlock}" />

</ResourceDictionary>