<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  COLORS  -->
    <Color x:Key="PrimaryColor">#5575C8</Color>
    <Color x:Key="GreenColor">#63CE63</Color>
    <Color x:Key="OrangeColor">#FFBF2F</Color>
    <Color x:Key="RedColor">#E52B20</Color>
    <Color x:Key="BlackColor">#353C42</Color>
    <Color x:Key="DarkColor">#CCCED0</Color>
    <Color x:Key="MediumColor">#ECECEE</Color>
    <Color x:Key="LightColor">#F9F9FB</Color>

    <!--  BRUSHES  -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}" />
    <SolidColorBrush x:Key="OrangeBrush" Color="{StaticResource OrangeColor}" />
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}" />
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource BlackColor}" />
    <SolidColorBrush x:Key="DarkBrush" Color="{StaticResource DarkColor}" />
    <SolidColorBrush x:Key="MediumBrush" Color="{StaticResource MediumColor}" />
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource LightColor}" />
</ResourceDictionary>